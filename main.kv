#:kivy 2.0.0

BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    Label:
        text: 'Name:'
    TextInput:
        id: name_input
        multiline: False

    Label:
        text: 'Description:'
    TextInput:
        id: description_input
        multiline: True

    Button:
        text: 'Submit'
        on_press: app.submit()